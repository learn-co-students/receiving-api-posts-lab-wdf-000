<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<div id="prodname" >
  
</div>
<div id="prodprice" >
  
</div>

<div id="proddescription">
  
</div>
<div id="prodinventory">
  
</div>
<script type="text/javascript" charset="utf-8">

  $('form').submit(function(e){
    e.preventDefault();
    var values = $(this).serialize();
    var producting = $.post('/products',values);
    producting.done(function(data){
      var product = data.product;
      $('#prodname').text(product.name);
      $('#prodprice').text(String(product.price));
      $('#proddescription').text(product.description);
      $('#prodinventory').text(String(product.inventory));
    });
  });
</script>
